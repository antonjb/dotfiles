[core]
	excludesfile = ~/.gitignore

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "git://github.com/"
